<h5><%= link_to("Back to List", members_path, :class => 'back-link') %></h5>

<h3>User Details</h3>

<p><i> This is the page to view all the details of each member </p></i>

<table class="table" summary="user details">

    <tr class="header">
        <th>Attribute</th>
        <th>Value</th>
    </tr>
    <tr>
        <th>Name</th>
        <td><%=@user.name %></td>
    </tr>
    <tr>
        <th>Email</th>
        <td><%=@user.email %></td>
    </tr>
    <tr>
        <th>Class Year</th>
        <td><%=@user.class_year %></td>
    </tr>
    <tr>
        <th>Role</th>
        <td><%=@user.role %></td>
    </tr>
    <tr>
        <th>Dues Paid?</th>
        <td><%=@user.paid_dues? %></td>
    </tr>
    <tr>
        <th>Total Points</th>
        <td><%=@user.total_points %></td>
    </tr>
    <tr>
        <th>Accomplishment Points</th>
        <td><%=@user.accomplishment_points %>  <%= link_to("(Details)", {controller: :member_management, action: :show_accomplishments, id: @user.id}, method: :get) %></td>
    </tr>
    <tr>
        <th>Attendance Points</th>
        <td><%=@user.attendance_points %>  <%= link_to("(Details)", {controller: :member_management, action: :show_event_attendance, id: @user.id}, method: :get) %></td>
    </tr>
    <tr>
        <th>Manually Assigned Points</th>
        <td><%=@user.manual_points_received %>  <%= link_to("(Details)", {controller: :member_management, action: :show_manual_points, id: @user.id}, method: :get) %></td>
    </tr>

</table>

