<h5><%= link_to("Back to List", semesters_path, :class => 'back-link') %></h5>

<% @page_title = "Delete" %>

<h3>Delete</h3>

<i><p>About to Delete the Following Semester</p></i>

<table class="table">
	<tr>
		<th>Name</th>
		<td><%= @semester.name %></td>
	</tr>
	<tr>
		<th>Start</th>
		<td><%= @semester.dates %></td>
	</tr>
	<tr>
		<th>End</th>
		<td><%= @semester.dates %></td>
	</tr>
</table>

<%= form_for(@semester, :method => 'delete') do |f| %>
	<p><i>Are you sure?</p></i>
	<%= f.submit("Delete Semester", :class => "btn btn-primary") %>
<% end %>
