<h5><%= link_to("Back to List", semesters_path, :class => 'back-link') %></h5>

<% @page_title = "Update a Semester" %>

<h3>Update Semester </h3>

<p><i> Updating details of the semester: <%= @semester.name %></p></i>


<%= form_with(:model => @semester) do |f| %>

	<p>Name
	<%= f.text_field(:name, class: "form-control") %></p>
	<p>Start Date<%= f.date_field(:start, :value => @semester.dates.begin, class: "form-control") %></p>
	<p>End Date<%= f.date_field(:end, :value => @semester.dates.end, class: "form-control") %></p>

	<p><%= f.submit("Update Semester", :class => "btn btn-primary") %></p>
<% end %>