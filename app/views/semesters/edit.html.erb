<%= link_to semesters_path do %>
	<i class="fa fa-home fa-3x"></i>
<% end %>

<% @page_title = "Update a Book" %>

<h1>Update a Book</h1>

<p>Updating <%= @semester.name %></p>

<%= form_with(:model => @semester) do |f| %>
	<table class="table data-inline">
		<tr>
			<th>Name</th>
			<td><%= f.text_field(:name) %></td>
		</tr>
		<tr>
			<th>Start Date</th>
			<td><%= f.date_field(:start, :value => @semester.dates.begin) %></td>
		</tr>
		<tr>
			<th>End Date</th>
			<td><%= f.date_field(:end, :value => @semester.dates.end) %></td>
		</tr>
	</table>

	<%= f.submit("Update Semester", :class => "btn btn-primary") %>
<% end %>