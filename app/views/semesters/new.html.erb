<% @page_title = "Add a Semester" %>

<h1>Add a Semester</h1>

<%= form_with(:model => @semester) do |f| %>
	<p>Name</p>
	<p><%=f.text_field(:name, class: "form-control")%></p>
	
	<p>Start</p>
	<p><%=f.date_field(:start, class: "form-control")%></p>

	<p>End</p>
	<p><%=f.date_field(:end, class: "form-control")%></p>

	<p><%= f.submit("Create Semester", :class => "btn btn-primary") %> <%= link_to "Cancel", semesters_path, class: "btn btn-secondary" %></p>
<% end %>
<br>