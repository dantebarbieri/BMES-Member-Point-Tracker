<h5><%= link_to("Back to List", semesters_path, :class => 'back-link') %></h5>
<% @page_title = "Add a Semester" %>

<h3>Add a Semester</h3>

<p><i>Creating a new semester</p></i>

<%= form_with(:model => @semester) do |f| %>

	<p>Name
	<%=f.text_field(:name, class: "form-control")%></p>
	
	<p>Start
	<%=f.date_field(:start, class: "form-control")%></p>


	<p>End
	<%=f.date_field(:end, class: "form-control")%></p>

	<p><%= f.submit("Create Semester", :class => "btn btn-primary") %></p>
<% end %>
<br>