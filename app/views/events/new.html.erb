<h5><%= link_to("Back to Event List", events_path, :class => 'back-link') %></h5>

<% @page_title = "Event Create" %>

<h3>New Event</h3>
<p><i> Creating a new event</p></i>

<div class="new event">
  
  <%= form_for(@event) do |f| %>
    <table class="table" summary="Event form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Date</th>
        <td><%= f.date_select(:date) %></td>
      </tr>
      <tr>
        <th>Time</th>
        <td><%= f.time_select(:time) %></td>
      </tr>
      <tr>
        <th>Event Type</th>
        <td><%= f.select(:event_type, 
          :collection => Event.event_types.keys.map { |w| [w.humanize, w] }) %></td>
      </tr>
      <tr>
        <th>Hidden?</th>
        <td><%= f.check_box(:hidden) %></td>
      </tr>
      <tr>
        <th>Attendance Points</th>
        <td><%= f.number_field(:attendance_points, in: 0.0..1000.0, step: 0.001) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Create Event", :class => "btn btn-primary") %>
    </div>

  <% end %>

</div>

