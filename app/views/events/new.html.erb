<%= link_to("<< Back to List", events_path, :class => 'back-link') %>

<div class="new edit">
    <h2>New Event</h2>
    <%= form_for(@event) do |f| %>
        <table summary="Event form fields">
            <tr>
                <th>Name</th>
                <td><%= f.text_field(:name) %></td>
            </tr>
            <tr>
                <th>Date</th>
                <td><%= f.date_select(:date) %></td>
            </tr>
            <tr>
                <th>Time</th>
                <td><%= f.time_select(:time) %></td>
            </tr>
            <tr>
                <th>Event Type</th>
                <td><%= f.text_field(:event_type) %></td>
            </tr>
            <tr>
                <th>Attendance Points</th>
                <td><%= f.text_field(:attendance_points) %></td>
            </tr>
        </table>
        
        <div class="form-buttons">
            <%= f.submit("Create Event") %>
        </div>
        
    <% end %>
</div>

