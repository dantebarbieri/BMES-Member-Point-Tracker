
<!-- TODO: make this prettier but I don't know how yet -->
<%= form_for(:search, class: 'form-inline', url: events_path, method: :get) do |f| %>
  <td>
    <%= f.text_field :name, value: name_from_search_params %>
  </td>
  <!-- TODO make this a range -->
  <td>
    <%= f.datetime_field :start_time, value: start_time_from_search_params, include_blank: true %>
  </td>
  <td>
    <%= f.select(:event_type, 
          options_for_select(Event.event_types.map { |k,v| [k.humanize, v] }, event_type_from_search_params), 
          include_blank: true ) 
    %>
  </td>
  <td>
    <%= f.select(:hidden, 
          options_for_select(['', 'true', 'false'], hidden_from_search_params)) %>
  </td>
  <!-- TODO make this a range -->
  <td>
    <%= f.number_field :attendance_points, step: 0.01, value: attendance_points_from_search_params %>
  </td>
  <td>
    <%= f.number_field :participation_tracker_id, step: 1, value: participation_tracker_id_from_search_params %>
  </td>

  <td>
    <%= f.submit "Search", class: 'btn btn-primary' %>
  </td>
  
<% end %>
<%= form_tag(events_path, method: :get) do %>
  <td>
    <%= submit_tag "Clear", class: "btn btn-primary" %>
  </td>
<% end %>