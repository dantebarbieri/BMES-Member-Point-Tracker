<%= link_to("<< Back to List", events_path, :class => 'back-link') %>

<div class="event edit">
    <h2>Edit Event</h2>
    <%= form_for(@event) do |f| %>

        <table class="table" summary="Event form fields">
            <tr>
                <th>Name</th>
                <td><%= f.text_field(:name) %></td>
            </tr>
            <tr>
                <th>Date</th>
                <td><%= f.date_select(:date) %></td>
            </tr>
            <tr>
                <th>Time</th>
                <td><%= f.time_select(:time) %></td>
            </tr>
            <tr>
                <th>Type</th>
                <td><%= f.text_field(:event_type) %></td>
            </tr>
            <tr>
                <th>Hidden?</th>
                <td><%= f.check_box(:hidden) %></td>
            </tr>
            <tr>
                <th>Attendance Points</th>
                <td><%= f.number_field(:attendance_points, in: 0.0..1000.0, step: 0.001) %></td>
            </tr>
        </table>

        <div class="form-buttons">
            <%= f.submit("Update Event", :class => "btn btn-primary") %>
        </div>

    <% end %>
</div>

