
<div class="accomplishments index">
<h2>Accomplishments</h2>

<table class="table" summary="Accomplishments List">

    <tr class="header">
        <th>Name</th>
		<th>Description</th>
		<th>Points</th>
    </tr>
    <% @accomplishments.each do |accomplishments| %>
    <tr>
        <td><%= accomplishments.name %></td>
		<td><%= accomplishments.description %></td>
		<td><%= accomplishments.points %></td>
        <td class="actions">
            <%= link_to("Show", accomplishments_path(accomplishments), :class => 'action show') %>
            <%= link_to("Edit", edit_accomplishments_path(accomplishments), :class => 'action edit') %>
            <%= link_to("Delete", delete_accomplishments_path(accomplishments), :class => 'action delete') %>
        </td>
    </tr>
    <% end %>
</table>

<%= link_to("Add New Accomplishment", accomplishments_path, :class => "btn btn-primary") %>

<!-- <p>Find me in app/views/accomplishments/index.html.erb</p> -->
</div>