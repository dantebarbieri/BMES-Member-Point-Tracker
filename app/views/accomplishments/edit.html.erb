
<%= link_to("<< Back to List", accomplishments_path, :class => 'back-link') %>

<div class="dues edit">
    <h2>Edit Dues</h2>
    <%= form_for(@accomplishments) do |f| %>
        <table summary="Dues paid">
            <tr>
                <th>Name</th>
                <td><%= f.text_field(:name) %></td>
            </tr>
            <tr>
                <th>Description</th>
                <td><%= f.text_field(:description) %></td>
            </tr>
            <tr>
                <th>Points</th>
                <td><%= f.number_field(:points) %></td>
            </tr>
        </table>
        
        <div class="form-buttons">
            <%= f.submit("Update Accomplishments (Dues Paid)") %>
        </div>
        
    <% end %>
</div>

