<h5><%= link_to("Back to List", accomplishments_path, :class => 'back-link') %></h5>

<% @page_title = "Update" %>

<h3>Update</h3>

<i><p>About to Update the Following Accomplishments: <%= @accomplishments.name %></p></i>


<%= form_for(@accomplishments) do |f| %>
	<table class="table">

		<tr>
			<th>Name</th>
			<td><%= f.text_field(:name) %></td>
		</tr>
		<tr>
			<th>Description</th>
			<td><%= f.text_area(:description) %></td>
		</tr>
		<tr>
			<th>Points</th>
			<td><%= f.number_field(:points, :step => 0.01) %></td>
		</tr>
		<tr>
			<th>Is Dues?</th>
			<td><%= f.check_box(:is_dues) %></td>
		</tr>
	</table>


	<%= f.submit("Update Accomplishment", :class => "btn btn-primary") %>
<% end %>