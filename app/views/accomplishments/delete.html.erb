<%= link_to accomplishments_path do %>
	<i class="fa fa-home fa-3x"></i>
<% end %>

<% @page_title = "Delete" %>

<h1>Delete</h1>

<p>About to Delete the Following Accomplishment:</p>


<table class="table">

	<tr>
		<th>Name</th>
		<td><%= @accomplishment.name %></td>
	</tr>
	<tr>
		<th>Description</th>
		<td><%= @accomplishment.description %></td>
	</tr>
	<tr>
		<th>Points</th>
		<td><%= @accomplishment.points %></td>
	</tr>
	<tr>
		<th>Added to Database on</th>
		<td><%= @accomplishment.created_at %></td>
	</tr>
	<tr>
		<th>Last Updated on</th>
		<td><%= @accomplishment.updated_at %></td>
	</tr>
</table>

<%= form_for(@accomplishment, :method => 'delete') do |f| %>
	<p>Are you sure?</p>
	<%= f.submit("Delete Accomplishment", :class => "btn btn-primary") %>
<% end %>
