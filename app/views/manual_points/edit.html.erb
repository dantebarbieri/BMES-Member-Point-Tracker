<%= link_to("<< Back to List", manual_points_path, :class => 'back-link') %>

<div class="Edit Manual Points">
    <h2>Update Points Manually</h2>
    <%= form_for(@manual_points) do |f| %>
        <table class="table" summary="Manual Points Editing">
            <tr>
                <th>Points</th>
                <td><%= f.number_field(:points, in: 0.0..1000.0, step: 0.01) %></td>
            </tr>
            <tr>
                <th>Reason</th>
                <td><%= f.text_field(:reason) %></td>
            </tr>
            </tr>
        </table>
        
        <div class="form-buttons">
            <%= f.submit("Update Points Manually") %>
        </div>
        
    <% end %>
</div>

