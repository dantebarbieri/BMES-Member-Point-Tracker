<%= link_to("<< Back to List", manual_points_path, :class => 'back-link') %>

<div class="new manual points">
    <h2>New Manual Points</h2>
    <%= form_for(@manual_points) do |f| %>
        <table class="table" summary="Manual Points">
            <tr>
                <th>Points</th>
                <td><%= f.number_field(:points, in: 0.0..1000.0, step: 0.01) %></td>
            </tr>
            <tr>
                <th>Category</th>
                <td><%= f.select(:reason, [["Miscellaneous", "miscellaneous"], ["Volunteer", "volunteer"], ["Transfer Old", "transfer_old"]]) %></td>
            </tr>
            <tr>
                <th>Reason</th>
                <td><%= f.text_area(:reason_message) %></td>
            </tr>
            <tr>
                <th>Member</th>
                <% members= Array.new %>
                <% @members.each do |m| %>
                    <% members << [m.name + ' (' + m.email + ')', m.id] %>
                <% end %>
                <td><%= f.select(:member_id, members) %></td>
            </tr>
        </table>
        
        <div class="form-buttons">
            <%= f.submit("Create Manual Points", :class => "btn btn-primary") %>

        </div>
        
    <% end %>
</div>

