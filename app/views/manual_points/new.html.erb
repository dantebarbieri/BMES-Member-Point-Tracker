<%= link_to manual_points_path do %>
	<i class="fa fa-home fa-3x"></i>
<% end %>

<% @page_title = "Add Manual Points" %>

<h1>Add Manual Points</h1>

<%= form_for(@manual_points) do |f| %>
	<table class="table">
		<tr>
			<th>Points</th>
			<td><%= f.number_field(:points, :step => 0.01) %></td>
		</tr>
		<tr>
			<th>Reason</th>
			<td><%= f.text_area(:reason) %></td>
		</tr>
	</table>

	<%= f.submit("Create Manual Points", :class => "btn btn-primary") %>
<% end %>