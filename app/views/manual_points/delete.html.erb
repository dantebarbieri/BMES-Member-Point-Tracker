<%= link_to manual_points_path do %>
	<i class="fa fa-home fa-3x"></i>
<% end %>

<% @page_title = "Delete" %>

<h1>Delete</h1>

<p>About to Delete the Following Manual Points:</p>


<table class="table">

	<tr>
		<th>Points</th>
		<td><%= @manual_points.points %></td>
	</tr>
	<tr>
		<th>Reason</th>
		<td><%= @manual_points.reason %></td>
	</tr>
	<tr>
		<th>Added to Database on</th>
		<td><%= @manual_points.created_at %></td>
	</tr>
	<tr>
		<th>Last Updated on</th>
		<td><%= @manual_points.updated_at %></td>
	</tr>
</table>

<%= form_for(@manual_points, :method => 'delete') do |f| %>
	<p>Are you sure?</p>
	<%= f.submit("Delete Manual Points", :class => "btn btn-primary") %>
<% end %>